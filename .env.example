# spotfinder-agent-for-foreigner Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
APP_NAME=spotfinder-agent-for-foreigner
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# =============================================================================
# vLLM / LLM Configuration
# =============================================================================
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
VLLM_API_KEY=EMPTY
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/spotfinder_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# =============================================================================
# Vector DB (Qdrant)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=spotfinder_memories

# =============================================================================
# Embedding Model
# =============================================================================
EMBEDDING_MODEL_NAME=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# =============================================================================
# Naver Map API (Required for travel features)
# Get your keys at: https://developers.naver.com/products/map/
# =============================================================================
NAVER_MAP_CLIENT_ID=your_naver_client_id
NAVER_MAP_CLIENT_SECRET=your_naver_client_secret
NAVER_MAP_API_URL=https://openapi.naver.com/v1

# =============================================================================
# Papago Translation API (Required for i18n)
# Get your keys at: https://developers.naver.com/products/papago/
# =============================================================================
PAPAGO_CLIENT_ID=your_papago_client_id
PAPAGO_CLIENT_SECRET=your_papago_client_secret

# =============================================================================
# Observability - Sentry
# =============================================================================
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.1

# =============================================================================
# Observability - Better Stack (Logtail)
# =============================================================================
LOGTAIL_TOKEN=your_logtail_token

# =============================================================================
# Alerting - Slack
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
RATE_LIMIT_CHAT=20
RATE_LIMIT_CHAT_STREAM=10

# =============================================================================
# Context Engineering
# =============================================================================
CONTEXT_SOFT_LIMIT_TOKENS=6000
CONTEXT_HARD_LIMIT_TOKENS=8000
RECENT_MESSAGES_COUNT=20
MEMORY_RETRIEVAL_TOP_K=3
MEMORY_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# Travel Features
# =============================================================================
ENABLE_PLACE_CACHING=true
PLACE_CACHE_TTL_HOURS=1
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh,ja,ko

# =============================================================================
# Feature Flags
# =============================================================================
OBSERVER_AGENT_ENABLED=true
ANOMALY_DETECTION_ENABLED=true
